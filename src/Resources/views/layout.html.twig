<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{% block title %}Auditor{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/dhauditor/app.css') }}">
    {% endblock %}
</head>
<body class="bg-slate-50 text-slate-900 antialiased dark:bg-slate-950 dark:text-slate-100">
    <header class="sticky top-0 z-50 backdrop-blur
                   bg-white/80 dark:bg-slate-950/80
                   border-b border-slate-200 dark:border-slate-800">
        <div class="max-w-6xl mx-auto px-6 h-16
                    flex items-center justify-between">
            <a href="{{ path('dh_auditor_list_audits') }}"
               class="flex items-center gap-3 group">
                {# Icon #}
                <div class="w-8 h-8 rounded-lg
                            bg-slate-900 dark:bg-slate-100
                            text-white dark:text-slate-900
                            flex items-center justify-center
                            text-sm font-bold">
                    A
                </div>
                <div class="leading-tight">
                    {# Bundle name #}
                    <div class="font-semibold tracking-tight">
                        Auditor
                    </div>
                    {# Punchline #}
                    <div class="text-[11px] text-slate-500 dark:text-slate-400">
                        Doctrine audit inspection
                    </div>
                </div>
            </a>
        </div>
    </header>

    <main class="max-w-6xl mx-auto px-6 py-8">
        {% block dh_auditor_content %}{% endblock %}
    </main>

{% block javascripts %}{% endblock %}
</body>
</html>
