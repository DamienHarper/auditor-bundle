<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{% block title %}auditor{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/dhauditor/app.css') }}">
    {% endblock %}
    <script>
        (function(){
            var t = localStorage.getItem('dh_auditor_theme');
            if (t === 'dark' || (!t && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                document.documentElement.classList.add('dark');
            }
        })();
    </script>
</head>
<body class="bg-slate-50 text-slate-900 antialiased dark:bg-slate-950 dark:text-slate-100">
    <header class="sticky top-0 z-50 backdrop-blur
                   bg-white/80 dark:bg-slate-950/80
                   border-b border-slate-200 dark:border-slate-800">
        <div class="max-w-6xl mx-auto px-6 h-16
                    flex items-center justify-between">
            <a href="{{ path('dh_auditor_list_audits') }}"
               class="flex items-center gap-3 group">
                {# Icon #}
                <div class="w-10 h-10 rounded-lg
                            bg-slate-900 dark:bg-slate-100
                            text-white dark:text-slate-900
                            flex items-center justify-center
                            text-xl font-bold">
                    A
                </div>
                <div class="leading-tight">
                    {# Bundle name #}
                    <div class="text-lg font-semibold tracking-tight">auditor</div>
                    {# Punchline #}
                    <div class="text-[11px] text-slate-500 dark:text-slate-400">The missing audit log library.</div>
                </div>
            </a>

            {# Theme toggle button #}
            <button type="button"
                    onclick="(function(){var d=document.documentElement,c=d.classList,k='dh_auditor_theme';if(c.contains('dark')){c.remove('dark');localStorage.setItem(k,'light');}else{c.add('dark');localStorage.setItem(k,'dark');}})();"
                    class="p-2 rounded-lg text-slate-500 hover:text-slate-700 hover:bg-slate-100
                           dark:text-slate-400 dark:hover:text-slate-200 dark:hover:bg-slate-800
                           transition-colors"
                    title="{{ 'audit.theme.toggle'|trans(domain='auditor') }}">
                {# Sun icon (visible in dark mode) #}
                <svg class="w-5 h-5 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
                {# Moon icon (visible in light mode) #}
                <svg class="w-5 h-5 block dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
                </svg>
            </button>
        </div>
    </header>

    <main class="max-w-6xl mx-auto px-6 py-4">
        {% block dh_auditor_content %}{% endblock %}
    </main>

{% block javascripts %}{% endblock %}
</body>
</html>
