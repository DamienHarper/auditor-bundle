{% macro render(entity, id = null, paginator) %}
    {% if paginator.haveToPaginate %}
        <div class="flex items-center justify-between mt-6 pt-6 border-t border-slate-200 dark:border-slate-800">
            {# Previous #}
            {% if paginator.hasPreviousPage %}
                <a href="{{ path('dh_auditor_show_entity_stream', {entity: entity, id: id, page: paginator.previousPage}) }}"
                   class="inline-flex items-center text-sm text-slate-600 hover:text-slate-900 dark:text-slate-400 dark:hover:text-slate-100 transition">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                    {% trans from 'auditor' %}audit.pager.previous{% endtrans %}
                </a>
            {% else %}
                <span class="inline-flex items-center text-sm text-slate-300 dark:text-slate-600 cursor-not-allowed">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                    {% trans from 'auditor' %}audit.pager.previous{% endtrans %}
                </span>
            {% endif %}

            {# Page info #}
            <span class="text-sm text-slate-500 dark:text-slate-400">
                {% trans with { '%current%': paginator.currentPage, '%total%': paginator.numPages } from 'auditor' %}audit.pager.page_info{% endtrans %}
            </span>

            {# Next #}
            {% if paginator.hasNextPage %}
                <a href="{{ path('dh_auditor_show_entity_stream', {entity: entity, id: id, page: paginator.nextPage}) }}"
                   class="inline-flex items-center text-sm text-slate-600 hover:text-slate-900 dark:text-slate-400 dark:hover:text-slate-100 transition">
                    {% trans from 'auditor' %}audit.pager.next{% endtrans %}
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </a>
            {% else %}
                <span class="inline-flex items-center text-sm text-slate-300 dark:text-slate-600 cursor-not-allowed">
                    {% trans from 'auditor' %}audit.pager.next{% endtrans %}
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </span>
            {% endif %}
        </div>
    {% endif %}
{% endmacro render %}
