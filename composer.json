{
  "name": "damienharper/auditor-bundle",
  "type": "symfony-bundle",
  "description": "Integrate auditor library in your Symfony projects.",
  "keywords": [
    "doctrine",
    "audit",
    "auditor",
    "audit-log",
    "audit-trail"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Damien Harper",
      "email": "damien.harper@gmail.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.4",
    "ext-intl": "*",
    "damienharper/auditor": "^4.0",
    "doctrine/doctrine-bundle": "^3.0",
    "doctrine/dbal": "^4.0",
    "doctrine/orm": "^3.2",
    "symfony/asset": "^8.0",
    "symfony/doctrine-bridge": "^8.0",
    "symfony/event-dispatcher": "^8.0",
    "symfony/lock": "^8.0",
    "symfony/security-bundle": "^8.0",
    "symfony/translation": "^8.0",
    "symfony/twig-bundle": "^8.0",
    "twig/extra-bundle": "^3.3 || ^4.0",
    "twig/intl-extra": "^3.3 || ^4.0"
  },
  "autoload": {
    "psr-4": {
      "DH\\AuditorBundle\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DH\\AuditorBundle\\Tests\\": "tests",
      "DH\\Auditor\\Tests\\": "vendor/damienharper/auditor/tests"
    }
  },
  "require-dev": {
    "gedmo/doctrine-extensions": "^3.0",
    "matthiasnoback/symfony-dependency-injection-test": "^6.0",
    "nyholm/symfony-bundle-test": "^3.0",
    "phpunit/phpunit": "^12.0",
    "symfony/asset-mapper": "^8.0",
    "symfony/browser-kit": "^8.0",
    "symfony/css-selector": "^8.0",
    "symfony/framework-bundle": "^8.0",
    "symfony/var-dumper": "^8.0",
    "symfonycasts/tailwind-bundle": "^0.12"
  },
  "scripts": {
    "test": "./vendor/bin/phpunit --colors=always --no-coverage",
    "test:coverage": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --colors=always",
    "testdox": "./vendor/bin/phpunit --colors=always --testdox --no-coverage",
    "cs-fix": "tools/php-cs-fixer/vendor/bin/php-cs-fixer fix --using-cache=no --verbose --ansi --allow-unsupported-php-version=yes",
    "cs-check": "tools/php-cs-fixer/vendor/bin/php-cs-fixer fix --using-cache=no --verbose --ansi --dry-run --allow-unsupported-php-version=yes",
    "phpstan": "tools/phpstan/vendor/bin/phpstan --memory-limit=1G --ansi analyse",
    "rector": "tools/rector/vendor/bin/rector",
    "rector-check": "tools/rector/vendor/bin/rector --dry-run",
    "qa": [
      "@rector",
      "@cs-fix",
      "@phpstan"
    ],
    "update-tools": "composer update --working-dir=tools/php-cs-fixer ; composer update --working-dir=tools/phpstan ; composer update --working-dir=tools/rector",
    "setup": "composer update --prefer-stable && rm -rf tests/App/var/cache/*"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "composer/package-versions-deprecated": true
    }
  },
  "suggest": {
    "symfony/cache": "Required for activity graph caching in the audit viewer"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "7.x-dev",
      "dev-6.x": "6.x-dev",
      "dev-5.x": "5.x-dev",
      "dev-4.x": "4.x-dev"
    }
  }
}
